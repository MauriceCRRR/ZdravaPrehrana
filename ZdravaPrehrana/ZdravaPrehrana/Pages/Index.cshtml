@page
@model IndexModel
@{
    ViewData["Title"] = "Prijava";
}

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h2 class="text-center mb-4">Prijava v sistem</h2>
                    <form method="post">
                        <div class="form-group mb-3">
                            <label asp-for="LoginInput.UporabniskoIme">Uporabniško ime</label>
                            <input asp-for="LoginInput.UporabniskoIme" class="form-control" />
                            <span asp-validation-for="LoginInput.UporabniskoIme" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="LoginInput.Geslo">Geslo</label>
                            <input asp-for="LoginInput.Geslo" type="password" class="form-control" />
                            <span asp-validation-for="LoginInput.Geslo" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Prijava</button>
                    </form>
                    <div class="text-center mt-3">
                        <a asp-page="/Account/Register">Registracija novega računa</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>